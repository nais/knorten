{{ define "charts/airflow" }}
    {{ template "head" }}
    <div class="box container">
        <div id="content">
            {{ if .values }}
                <h2>Rediger Airflow</h2>
            {{ else }}
                <h2>Ny Jupyter Notebook</h2>
            {{ end }}
            <form class="pure-form pure-form-stacked" action="" method="POST">
                <fieldset>
                    <div class="pure-control-group">
                        <label for="repo">DAG's repo</label>
                        <input type="text" name="repo" id="repo" value="{{ .values.DagRepo }}"
                               placeholder="navikt/dags"/>
                    </div>
                    <div class="pure-control-group">
                        <label for="branch">DAG's repo branch</label>
                        <input type="text" name="branch" id="branch" value="{{ .values.DagRepoBranch }}"
                               placeholder="main"/>
                    </div>

                    {{ if .values }}
                    <div class="pure-controls">
                        <button type="submit" class="pure-button pure-button-primary" disabled>Lagre</button>
                    </div>
                    {{ else }}
                        <div class="pure-controls">
                            <button type="submit" class="pure-button pure-button-primary">Lagre</button>
                        </div>
                    {{ end }}
                </fieldset>
            </form>
        </div>
    </div>
    <script>
        function addElement() {
            const newDiv = document.createElement("div");
            newDiv.className = "pure-control-group"

            const label = document.createElement("label");
            label.setAttribute("for", "email");
            label.appendChild(document.createTextNode("Ny bruker"));

            const input = document.createElement("input");
            input.type = "email"
            input.name = "users[]"
            input.id = "email"
            input.placeholder = "E-post"

            // add the newly created element and its content into the DOM
            const currentDiv = document.getElementById("users");
            currentDiv.appendChild(input);
        }
    </script>
    {{ template "footer" }}
{{ end }}
