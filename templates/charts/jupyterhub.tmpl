{{ define "charts/jupyterhub.tmpl" }}
    {{ template "head" }}
    <body>
    <div class="pure-g">
        <div class="pure-u-1-3"></div>
        <div class="pure-u-1-3">
            <h1>
                Her kan du lage en ny Jupter Notebook, sier Knorten
            </h1>
            <form class="pure-form pure-form-stacked" action="" method="POST">
                <div class="pure-control-group">
                    <label for="namespace">Namespace</label>
                    <input type="text" name="namespace" id="namespace" value="{{ .namespace }}"
                           placeholder="SmÃ¥ bokstaver med bindestrek"/>
                </div>

                <fieldset>
                    <legend>Tilpasninger</legend>
                    <div class="pure-control-group">
                        <label for="cpu">CPU</label>
                        <input type="text" name="cpu" id="cpu" value="{{ .values.CPULimit }}" placeholder="1"/>
                    </div>
                    <div class="pure-control-group">
                        <label for="memory">Memory</label>
                        <input type="text" name="memory" id="memory" value="{{ .values.MemoryLimit }}" placeholder="1GB"/>
                    </div>
                    <div class="pure-controls">
                        <button type="submit" class="pure-button pure-button-primary">Lagre</button>
                    </div>
                </fieldset>
            </form>
        </div>

        <script>
            function addElement() {
                const newDiv = document.createElement("div");
                newDiv.className = "pure-control-group"

                const label = document.createElement("label");
                label.setAttribute("for", "email");
                label.appendChild(document.createTextNode("Ny bruker"));

                const input = document.createElement("input");
                input.type = "email"
                input.name = "users[]"
                input.id = "email"
                input.placeholder = "E-post"


                // add the text node to the newly created div
                //newDiv.appendChild(label);
                //newDiv.appendChild(input);

                // add the newly created element and its content into the DOM
                const currentDiv = document.getElementById("users");
                currentDiv.appendChild(input);
            }
        </script>
    </div>
    </body>
    </html>
{{ end }}
