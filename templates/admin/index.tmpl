{{ define "admin/index" }}
    {{ template "head" }}
    <div class="box container">
        <div id="content">
            <h2>Adminpanel</h2>
            {{ with .errors }}
                {{ . }}
            {{ end }}
            <ul>
                <li><a href="/admin/jupyterhub">Rediger globale Jupyter verdier</a></li>
                <li><a href="/admin/airflow">Rediger globale Airflow verdier</a></li>
            </ul>
            <h3>{{ len .teams }} team bruker Knada </h3>
            {{ range .teams }}
                <h4>{{ .ID }}</h4>
                {{ range index $.apps .ID }}
                    {{ if eq . "airflow" }}
                        <img src="/assets/img/airflow.png" width="51px" alt="Airflow logo">
                    {{ else if eq . "jupyterhub" }}
                        <img src="/assets/img/jupyter.svg" alt="Jupyter logo">
                    {{ end }}
                {{ end }}
                <p>{{ .Users }}</p>
            {{ end }}
        </div>
    </div>

    {{ template "footer" }}
{{ end }}
